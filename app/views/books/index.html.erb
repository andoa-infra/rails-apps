<html>

<body>
<h1>Books</h1>


<header>


  <table>
    <tr>
    	<th colspan="" rowspan="" headers="" scope="">Title</th>
    	<th colspan="" rowspan="" headers="" scope="">Body</th>
    </tr>

    <% @books.each do |book| %>

    <tr>
        <td colspan="" rowspan="" headers="" scope=""><span><%= book.title %></span></td>
        <td colspan="" rowspan="" headers="" scope=""><span><%= book.body %></span></td>
        <td colspan="" rowspan="" headers="" scope=""><span><%=link_to "Show", book_path(book.id) %></span></td>
    	<td colspan="" rowspan="" headers="" scope=""></td>
    	<td colspan="" rowspan="" headers=""><span><%=link_to "Edit", edit_book_path(book) %></span></td>
    	<td colspan="" rowspan="" headers=""><span><%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "本当に削除しますか?" %></span></td>
    </tr>

 <% end %>

 </table>


</header>

<main>
<%= form_for(@book, url: '/books') do |f| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

	<h2>New Book</h2>
    <label for="book_title">Title</label>
    <div class="field">
    	<%= f.text_field :title %>
    </div>

    <label for="book_body">body</label>
    <div class="field">
    	<%= f.text_area :body %>
    </div>


    <%= f.submit 'Create Book' %>
</main>



<% end %>

</body>